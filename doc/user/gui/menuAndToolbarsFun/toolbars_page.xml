<sect2 id="gui_toolbars_page" xreflabel="toolbar Page">
		<title>Page</title>

		<para>
			<mediaobject>
				<imageobject>
					<imagedata fileref="gui/menuAndToolbarsFun/images/toolbars_page.png" format="PNG"/>
				</imageobject>
				<textobject>
					<phrase>Toolbar - Page</phrase>
				</textobject>
				<caption><para>Toolbar - Page</para></caption>
			</mediaobject>
		</para>

		<variablelist>
			<varlistentry>
				<term>First page</term>
				<listitem>See <xref linkend="gui_menu_firstPage"/>.</listitem>
			</varlistentry>
			<varlistentry>
				<term>Prev page</term>
				<listitem>See <xref linkend="gui_menu_prevPage"/>.</listitem>
			</varlistentry>
			<varlistentry>
				<term>Page position</term>
				<listitem>Actual page number which can be changed. To load the page press enter.</listitem>
			</varlistentry>
			<varlistentry>
				<term>Next page</term>
				<listitem>See <xref linkend="gui_menu_nextPage"/>.</listitem>
			</varlistentry>
			<varlistentry>
				<term>Last page</term>
				<listitem>See <xref linkend="gui_menu_lastPage"/>.</listitem>
			</varlistentry>

			<varlistentry>
				<term>Rotate page 270 degrees</term>
				<listitem>See <xref linkend="gui_menu_rotate270"/>.</listitem>
			</varlistentry>
			<varlistentry>
				<term>Rotate page 90 degrees</term>
				<listitem>See <xref linkend="gui_menu_rotate90"/>.</listitem>
			</varlistentry>
			<varlistentry>
				<term>Edit page metrics</term>
				<listitem>See <xref linkend="gui_menu_editPageMetrics"/>.</listitem>
			</varlistentry>
			<varlistentry>
				<term>Add system font to page</term>
				<listitem>See <xref linkend="gui_menu_addSystemFont"/>.</listitem>
			</varlistentry>
			<varlistentry>
				<term>Set page transformation metrics</term>
				<listitem>See <xref linkend="gui_menu_setPageTM"/>.</listitem>
			</varlistentry>
			<varlistentry>
				<term>Extract text from page</term>
				<listitem>See <xref linkend="gui_menu_extractText"/>.</listitem>
			</varlistentry>
			<varlistentry>
				<term>Zoom out</term>
				<listitem>See <xref linkend="gui_menu_zoomOut"/>.</listitem>
			</varlistentry>
			<varlistentry>
				<term>Zoom</term>
				<listitem>
					Manual selection of zoom level.
				</listitem>
			</varlistentry>
			<varlistentry>
				<term>Zoom in</term>
				<listitem>See <xref linkend="gui_menu_zoomIn"/>.</listitem>
			</varlistentry>
			<varlistentry>
				<term>Move page up</term>
				<listitem>
					 Move displayed page one level up which means the page number will decrement.
				</listitem>
			</varlistentry>
			<varlistentry>
				<term>Move page down</term>
				<listitem>
					 Move displayed page one level down which means the page number will increment.
				</listitem>
			</varlistentry>
			<varlistentry>
				<term>Remove page</term>
				<listitem>
					 Remove displayed page from the document.
				</listitem>
			</varlistentry>
		</variablelist>
</sect2>
